{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-underscore-dangle": ["error", {
            "allowAfterThis": true,
            "allow": [
                "_singleton"
            ]
        }],
        "one-var": ["warn", {
            "initialized": "never"
        }],
        "no-console": ["warn", {
            "allow": [
                "warn",
                "error"
            ]
        }],
        "no-unused-vars": "warn",
        "no-shadow": "warn",
        "comma-dangle": "off",
        "prefer-template": "off",
        "func-names": "off",
        "no-prototype-builtins": "off",
        "camelcase": "off"
    }
}
